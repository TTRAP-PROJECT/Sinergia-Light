<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="firstMobileApp.Views.Connection"
             >
    <VerticalStackLayout>
        <Label Text="Connexion" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,100,0,0"/>

        <!-- Champ de saisie pour le nom d'utilisateur -->
        <Entry Placeholder="Nom d'utilisateur" x:Name="UsernameEntry" Margin="20"/>

        <!-- Champ de saisie pour le mot de passe -->
        <Entry Placeholder="Mot de passe" IsPassword="True" x:Name="PasswordEntry" Margin="20"/>

        <!-- Bouton de connexion -->
        <Button Text="Se connecter" Clicked="LoginButton_Clicked" HorizontalOptions="Center" Margin="20"/>
    </VerticalStackLayout>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
</ContentPage>