<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="firstMobileApp.Views.Connection">
    <VerticalStackLayout Margin="20">
        <Image Source="synergia.g" Margin="0,20,0,40" HorizontalOptions="CenterAndExpand"/>
        <Label Text="Connexion" FontSize="Large" HorizontalOptions="Center"/>
        <Entry Placeholder="Email" x:Name="UsernameEntry" Margin="0,20" />
        <Entry Placeholder="Mot de passe" IsPassword="True" x:Name="PasswordEntry" Margin="0,20"/>
        <Button Text="Se connecter" Clicked="LoginButton_Clicked" Margin="0,40"/>
    </VerticalStackLayout>
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
</ContentPage>
